<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Messages</h1>

      <form action="/chats/create" method="post">
        <div class="form-group">
          <label for="title">Add your message</label>
          <input type="text" class="form-control" name="author" aria-describedby="authorHelp" placeholder="Enter your name">
        </div>
        <div class="form-group">
          <textarea rows="2" class="form-control" name="message" placeholder="Enter your message"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <ul class="list-group">
          <br />
<!-- #1 -->
        <% chats.forEach((chat) => { %>
<!-- #2 -->
          <li class="list-group-item">
            From: <%= chat.author %><br />
            <%= chat.message %>
          </li>
        <% }) %>
      </ul>

    </main>
  </body>
</html>